 {
    "name": "Google Chat Share Link Button",
    "version": "1.0",
    "description": "This extension addresses the problem of we not being able to share links to threads on Google Chat",
    "manifest_version": 2,
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["https://chat.google.com/*"],
        "js": ["contentScript.js"],
        "css": ["contentScript.css"]
      }
    ],
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      }
    },
    "icons": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  }
